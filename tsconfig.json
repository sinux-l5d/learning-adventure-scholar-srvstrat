{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": false,
    "outDir": "build",
    "rootDirs": ["src", "spec"],
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution":"Node",
    "types": ["node", "@types/jest"],
    "typeRoots" : ["./node_modules/@types"],
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@app": [
        "src/app"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts"
  ],
  "exclude" : [ ],
  "typedocOptions": {
      "entryPoints": [
          "src/app.ts"
      ],
      "out": "docs"
  }
}
